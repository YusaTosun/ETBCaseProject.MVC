@model IEnumerable<CustomerListVM>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                E-mail
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.MailAddress
            </td>
            <td>
                @item.PhoneNumber
            </td>
            <td>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a>
                <div>
                    <a class="btn btn-danger DeleteAction" data-id="@item.Id">Delete</a>
                </div>
            </td>
        </tr>
    }
</table>



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> @*daha sonra sweet alert yükle*@
<script>
    $(document).ready(function () {
        $('.DeleteAction').click(function () {
            let id = $(this).data("id");

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu işlem geri alınamaz!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!'
                }).then((result) => {
                    console.log(result)
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "GET",
                            url: "@Url.Action("Delete")",
                            data: { id: id },
                            dataType: "json",
                            success: function (data) {
                                Swal.fire({
                                    title: 'Başarılı',
                                    text: data.message,
                                    icon: 'success'
                                }).then(() => {
                                    location.reload();
                                });
                            },
                            error: function (xhr, status, error) {
                                Swal.fire({
                                    title: 'Hata',
                                text: 'The delete operation failed',
                                    icon: 'error'
                                });
                                console.log("Ajax hatası: " + error);
                            }
                        });
                    }
                });
        });
    });
</script>

